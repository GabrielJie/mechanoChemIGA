#module load mkl

fileName=main

rm *.o $fileName

#compile
#Sacado
CC -c -O2 -fPIC  -Wall -Wwrite-strings -I/$PETSC_DIR/$PETSC_ARCH/include -I/$PETSC_DIR/include -I$PETIGA_DIR/$PETSC_ARCH/include -I$PETIGA_DIR/include -I$TRILINOS_DIR/include/ $fileName.cc 
CC -o $fileName $fileName.o -Wl,-rpath,$PETIGA_DIR/$PETSC_ARCH/lib -L$PETIGA_DIR/$PETSC_ARCH/lib -lpetiga -Wl,-rpath,$PETSC_DIR/$PETSC_ARCH/lib -L$PETSC_DIR/$PETSC_ARCH/lib -lcraypetsc_intel_real -Wl,-rpath,$PETSC_DIR/$PETSC_ARCH/lib -lteuchoscore 
