#module load mkl

fileName=main

rm *.o $fileName

#compile
#Sacado
mpicxx -c -O2 -fPIC  -Wall -Wwrite-strings -I/$PETSC_DIR/$PETSC_ARCH/include -I/$PETSC_DIR/include -I$PETIGA_DIR/$PETSC_ARCH/include -I$PETIGA_DIR/include -I$TRILINOS_DIR/include/ $fileName.c 
